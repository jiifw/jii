root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 172
tab_width = 2

[*.md]
insert_final_newline = false
trim_trailing_whitespace = false

[*.{js,json,ts,yml,yaml}]
indent_size = 2
indent_style = space
